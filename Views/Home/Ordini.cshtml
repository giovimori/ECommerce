@model List<basilico.karol._5h.Ecommerce.Models.Ordine>
@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor


<b>Mail:</b> 
@HttpContextAccessor?.HttpContext?.Session.GetString("EMail")

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 800px;
        margin: 50px auto;
        padding: 20px;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h1 {
        text-align: center;
        color: #008000;
        margin: 0 0 20px 0;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

    th, td {
        padding: 15px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #f2f2f2;
    }

    td {
        background-color: #fff;
    }
</style>


    <h1>I miei ordini</h1>
    @if (!Model.Any())
    {
        <p>Non hai ordini in corso.</p>
        <p><a asp-area="" asp-controller="Home" asp-action="Farmaci">Vai allo Shop</a></p>
    }
    else
    {
        <table>
            <thead>
                <tr>
                    <th>Nome Prodotto</th>
                    <th>Quantit√†</th>
                    <th>Prezzo</th>
                    <th>Data Ordine</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ordine in Model)
                {
                    <tr>
                        <td>@ordine.NomeProdotto</td>
                        <td>@ordine.Quantita</td>
                        <td>@ordine.Prezzo.ToString("C")</td>
                        <td>@ordine.DataOrdine.ToString("dd/MM/yyyy")</td>
                    </tr>
                }
            </tbody>
        </table>
         <p><a asp-area="" asp-controller="Home" asp-action="Index">Vai alla Home</a></p>
    }
   
   
